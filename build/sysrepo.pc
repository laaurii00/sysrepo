prefix=/usr/local
includedir=${prefix}/include
libdir=${prefix}/lib

Name: sysrepo
Description: YANG-based system repository for all-around configuration management.
Version: 2.11.7
Requires.private: libyang
Libs: -L${libdir} -lsysrepo
Cflags: -I${includedir}

SR_REPO_PATH=/etc/sysrepo
SR_PLUGINS_PATH=/usr/local/lib/sysrepo/plugins
SRPD_PLUGINS_PATH=/usr/local/lib/sysrepo-plugind/plugins

SR_GROUP=
SR_UMASK=000
